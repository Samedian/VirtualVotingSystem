<!DOCTYPE HTML>
<html>
<head>
    @* this tag uses the plugin of the Ajax (Jquery) *@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    @*this tag is used to link the CSS file which will add the background image *@
    <link rel="Stylesheet" href="~/css/StyleSheet.css">

    @*this tag used for the validation using jquery *@
 
    @*  this tag is used to add styling *@
    <style>
        /* this tag is used to style the OTP block*/
      

        h1 {
            font-family: Times of Roman;
            font-size: 25pt;
            font-style: normal;
            font-weight: bold;
            color: blue;
            text-align: center;
            text-decoration: underline;
        }

        h4 {
            text-align: center;
            color: black;
        }

        /*this tag is uedd to to style the table of the view*/
        table {
            box-shadow: 0px 0px;
            font-family: Calibri;
            color: white;
            font-size: 15pt;
            font-style: normal;
            font-weight: bold;
            background-color: black;
            border-collapse: collapse;
            border: 2px white
        }


        /* this tag is uedd to Style the submit button */
        input[type=submit] {
            width: 10%;
            height: 10%;
            background-color: green;
            color: white;
        }
        /* Style the reset button */
        input[type=reset] {
            top: 200px;
            width: 10%;
            height: 10%;
            background-color: red;
            color: white;
        }
        p {
            text-align: center;
            font-size: 18px;
            font-family: 'Times New Roman';
            color: red;
        }
    </style>
</head>

<body>
    <h1> USER REGISTRATION </h1>
    <br />
    <h4>Please enter OTP received </h4>
    @using (Html.BeginForm())
    {
        @if (ViewBag.Error != null)
        {
            <p>
                @ViewBag.Error
            </p>
        }
        <table border="1" cellpadding="20" align="center">
            <tr>
                <td>
                    <lable for="OTP">OTP: *</lable>
                </td>
                @* this tag is used to design the OTP *@
                <td>
                    <input type="text" name="OTP" id="otpEntered" maxlength="5" min="0" max="9" />
                </td>
            </tr>
        </table>
        <br>
        <br>
        <div class="buttons" align="center">
            <input type="submit" value="Submit" id="submit">
            &nbsp &nbsp <input type="reset" value="Reset">
        </div>
    }
    <br>
</body>
</html>
