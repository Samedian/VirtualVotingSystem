@model IEnumerable<VirtualVotingSystemEntities.CandidateDetailEntity>

@{
    ViewData["Title"] = "GetCandidates";
}
<!DOCTYPE html>
<html>
<head>
    <style>

        h1 {
            text-align: center;
            color: white;
            background-color: orange;
            font-family: 'Times New Roman';
            font-size: 35px;
        }

        Table {
            width: 100%;
        }

        td {
            text-align: center;
        }

        th {
            background-color: black;
            height: 100px;
            color: white;
            font-size: 25px;
            font-family: 'Times New Roman';
        }

        tr {
            text-align: center;
        }

        input[type=submit] {
            width: 10%;
            height: 10%;
            background-color: green;
            color: white;
        }

        .submitButton mouse {
        }
    </style>

</head>
<body>
    <h1>ALL CANDIDATES </h1>
    <br />
    <br />
    <table cellpadding="10" border="1">
        <tr>
            <th>Aadhar number</th>
            <th> CandidateId</th>
            <th> CandidateName</th>
            <th> CandidateParty</th>
            <th>Constituency State</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AadharNumber</td>
                <td>@item.CandidateId</td>
                <td>@item.CandidateName</td>
                <td>@item.CandidateParty</td>
                <td>@item.ConstituencyState</td>

            </tr>
        }

    </table>
    <br />
    <br />
    <div class="submitButton" align="center">
        @Html.ActionLink("Back to Index", "Index")
    </div>

</body>
</html>
