<html>
<head>
    <link rel="stylesheet" href="/css/AdminAndCandidateHome.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
        body {
            background-color: orange;
        }

        h2 {
            text-decoration: underline;
            color: black;
        }

        h1 {
            font-size: 50px;
            text-align: center;
            top: 50%;
            width: 100%;
            height: 80px;
            text-shadow: 3px 3px 4px orange;
            color: black;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <br />
    <form method="get">
        <div class="btn-group-lg" align="center">
            <h2> ADMIN ACTIONS</h2>
            <br />

            <button type="button" class="btn btn-outline-dark btn-block ">@Html.ActionLink("Add", "AddAdmin")</button>
            
            <button type="button" class="btn btn-outline-dark btn-block ">@Html.ActionLink("Update", "UpdateAdmin")</button>
            <br />

        </div>

        <br />
        <br />
        <div class="btn-group-lg" align="center">
            <h2>CANDIDATE ACTIONS </h2>
            <br />
            <button type="button" class="btn btn-outline-dark btn-block">@Html.ActionLink("Add", "AddCandidate")</button> 
            <button type="button" class="btn btn-outline-dark btn-block">@Html.ActionLink("Update", "UpdateCandidate")</button> 
            <button type="button" class="btn btn-outline-dark btn-block ">@Html.ActionLink("Delete", "DeleteCandidate")</button> 
            <button type="button" class="btn btn-outline-dark btn-block ">@Html.ActionLink("Get By State", "GetCandidatesByState") </button> 
            <button type="button" class="btn btn-outline-dark btn-block ">@Html.ActionLink("Get By Id", "GetCandidateById") </button> 
            <button type="button" class="btn btn-outline-dark btn-block">@Html.ActionLink("Get All", "GetCandidates")</button>

        </div>
    </form>
</body>
</html>
